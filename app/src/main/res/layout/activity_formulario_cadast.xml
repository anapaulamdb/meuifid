<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:backgroundTint="#E8F2E8"
        tools:context=".FormularioCadast">


        <ImageView
            android:id="@+id/logo"
            android:layout_width="187dp"
            android:layout_height="70dp"
            android:src="@drawable/logo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.053" />

        <View
            android:id="@+id/containerComponents"
            style="@style/ContComponentes"
            android:layout_width="413dp"
            android:layout_height="621dp"
            android:layout_marginTop="35dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logo" />

        <EditText
            android:id="@+id/edit_nome"
            style="@style/Editor_txt2"
            android:elevation="4dp"
            android:hint="   Nome"
            android:inputType="text"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/containerComponents"
            app:layout_constraintEnd_toEndOf="@id/containerComponents"
            app:layout_constraintStart_toStartOf="@id/containerComponents"
            app:layout_constraintTop_toTopOf="@id/containerComponents"
            app:layout_constraintVertical_bias="0.037" />

        <EditText
            android:id="@+id/cpf"
            style="@style/Editor_txt2"
            android:layout_marginTop="28dp"
            android:hint="   CPF"
            android:inputType="number"
            android:textSize="16sp"
            android:elevation="4dp"
            app:layout_constraintEnd_toEndOf="@id/containerComponents"
            app:layout_constraintHorizontal_bias="0.304"
            app:layout_constraintStart_toStartOf="@id/containerComponents"
            app:layout_constraintTop_toBottomOf="@id/edit_nome" />

        <EditText
            android:id="@+id/curso"
            style="@style/Editor_txt2"
            android:layout_marginTop="28dp"
            android:hint="   Curso"
            android:inputType="text"
            android:textSize="16sp"
            android:elevation="4dp"
            app:layout_constraintEnd_toEndOf="@id/containerComponents"
            app:layout_constraintHorizontal_bias="0.304"
            app:layout_constraintStart_toStartOf="@id/containerComponents"
            app:layout_constraintTop_toBottomOf="@id/cpf" />

        <EditText
            android:id="@+id/matricula"
            style="@style/Editor_txt2"
            android:layout_marginTop="28dp"
            android:hint="   MatrÃ­cula"
            android:inputType="number"
            android:textSize="16sp"
            android:elevation="4dp"
            app:layout_constraintEnd_toEndOf="@id/containerComponents"
            app:layout_constraintHorizontal_bias="0.304"
            app:layout_constraintStart_toStartOf="@id/containerComponents"
            app:layout_constraintTop_toBottomOf="@id/curso" />

        <EditText
            android:id="@+id/edit_email"
            style="@style/Editor_txt2"
            android:layout_marginTop="28dp"
            android:drawableRight="@drawable/ic_email"
            android:hint="   E-mail"
            android:inputType="textEmailAddress"
            android:textSize="16sp"
            android:elevation="4dp"
            app:layout_constraintEnd_toEndOf="@id/containerComponents"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="@id/containerComponents"
            app:layout_constraintTop_toBottomOf="@+id/matricula" />

        <EditText
            android:id="@+id/edit_senha"
            style="@style/Editor_txt2"
            android:layout_marginTop="28dp"
            android:drawableRight="@drawable/ic_olho"
            android:hint="   Senha"
            android:inputType="textPassword"
            android:textSize="16sp"
            android:elevation="4dp"
            app:layout_constraintEnd_toEndOf="@id/containerComponents"
            app:layout_constraintStart_toStartOf="@id/containerComponents"
            app:layout_constraintTop_toBottomOf="@+id/edit_email" />


        <EditText
            android:id="@+id/edit_senhaCp"
            style="@style/Editor_txt2"
            android:layout_marginTop="28dp"
            android:drawableRight="@drawable/ic_olho"
            android:hint="   Repetir Senha"
            android:inputType="textPassword"
            android:textSize="16sp"
            android:elevation="4dp"
            app:layout_constraintEnd_toEndOf="@id/containerComponents"
            app:layout_constraintHorizontal_bias="0.487"
            app:layout_constraintStart_toStartOf="@id/containerComponents"
            app:layout_constraintTop_toBottomOf="@+id/edit_senha" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_cadastrar"
            style="@style/Botao"
            android:layout_width="334dp"
            android:layout_height="40dp"
            android:layout_marginBottom="68dp"
            android:backgroundTint="#24B483"
            android:gravity="center"
            android:onClick="abrirDialogo"
            android:textAllCaps="false"
            android:text="@string/cadastrar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/containerComponents" />

        <ImageView
            android:id="@+id/uploadImage"
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:layout_marginBottom="40dp"
            android:src="@drawable/anexar_foto"
            app:layout_constraintBottom_toBottomOf="@+id/containerComponents"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.135"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_senhaCp"
            app:layout_constraintVertical_bias="0.197" />

        <ImageView
            android:id="@+id/imgSelected"
            android:layout_width="182dp"
            android:layout_height="184dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/bt_cadastrar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.23"
            app:layout_constraintStart_toEndOf="@+id/uploadImage"
            app:layout_constraintTop_toBottomOf="@+id/edit_senhaCp"
            app:layout_constraintVertical_bias="0.338"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>